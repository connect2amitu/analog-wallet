{
	"author": "Analog Team",
	"description": "Analog Wallet Dev",
	"homepage_url": "https://www.analog.one/",
	"name": "Analog - Extension Wallet Dev",
	"short_name": "Analog Wallet Dev",
	"manifest_version": 3,
	"permissions": ["storage", "tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_title": "Analog Wallet Dev",
		"default_popup": "index.html"
	},
	"content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["http://*/*", "https://*/*"],
			"run_at": "document_start"
		}
	],
	"icons": {
		"18": "images/icon-18x18.png",
		"48": "images/icon-48x48.png",
		"72": "images/icon-72x72.png",
		"128": "images/icon-128x128.png",
		"144": "images/icon-144x144.png",
		"152": "images/icon-152x152.png",
		"192": "images/icon-192x192.png",
		"384": "images/icon-384x384.png",
		"512": "images/icon-512x512.png"
	},
	"content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self'"
  },
	"version": "0.0.1"
}
